{
   "manifest_version": 2
   , "version": "0.2"
   , "name": "__MSG_ExtensionName__"
   , "short_name": "ILGRL"
   , "description": "__MSG_ExtensionDescription__"
   , "default_locale": "ja"
   , "background": {
      "scripts": ["background.js"]
      , "persistent": false
   }
   , "content_scripts": [ {
      "all_frames": true,
      "js": [ "content_script.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
   }]
   , "permissions": [ "contextMenus", "tabs" ]
   , "icons": {
      "16": "icon/icon16.png"
      , "48": "icon/icon48.png"
      , "128": "icon/icon128.png"
   }
}
